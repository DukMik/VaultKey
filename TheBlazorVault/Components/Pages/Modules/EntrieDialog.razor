<div class="dialog-container">
    <div class="dialog">
        <div class="dialog-header">
            <h3 class="dialog-title">EntrieDialog</h3>
            <button class="dialog-close" @onclick="Close">&times;</button>
        </div>
        
        <div class="dialog-content">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="text" id="password" class="form-control" @bind="password" />
            </div>
            
            <div class="form-group">
                <label for="name">Nom</label>
                <input type="text" id="name" class="form-control" @bind="name" />
            </div>
            
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" id="username" class="form-control" @bind="username" />
            </div>
            
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" id="url" class="form-control" @bind="url" />
            </div>
            
            <div class="form-group">
                <label for="comment">Commentaire</label>
                <textarea id="comment" class="form-control" @bind="comment"></textarea>
            </div>
        </div>
        
        <div class="dialog-footer">
            <button class="btn btn-secondary" @onclick="Close">Annuler</button>
            
            @if (IsCreateOrIsEdit == "Edit")
            {
                <button class="btn btn-primary" @onclick="Update">Modifier</button>
            }
            else
            {
                <button class="btn btn-primary" @onclick="Create">Enregistrer</button>
            }
        </div>
    </div>
</div>


